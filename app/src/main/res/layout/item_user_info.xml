<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp">

        <RelativeLayout
            android:id="@+id/user_item_list_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/user_image"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:src="@drawable/ic_image_black_24dp"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/header_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foosball Socials !"
                android:textSize="18sp"
                android:layout_marginLeft="8dp"
                android:textColor="@android:color/white"
                android:layout_marginTop="110dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_image_icon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_person_black_24dp"
                android:layout_marginTop="120dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_image">

                <ImageView
                    android:id="@+id/show_date"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_image_black_24dp"
                    android:padding="5dp"/>

                <View
                    android:id="@+id/view_line"
                    android:layout_width="2dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/show_date"
                    android:layout_marginLeft="5dp"
                    android:background="#17bfae"/>

                <TextView
                    android:id="@+id/sort_detail_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Power up for a fun-filod night of foosball and games"
                    android:layout_toRightOf="@+id/view_line"
                    android:layout_marginLeft="10dp"
                    android:textSize="13sp"
                    android:textColor="#000000"
                    android:alpha="0.8"
                    android:layout_marginRight="80dp"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/work_detail_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/view_line"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Safe House Gastropub"
                    android:layout_below="@+id/sort_detail_text"/>

                <ImageView
                    android:id="@+id/info_image_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/arrow_icon"
                    android:padding="5dp"
                    android:layout_alignBottom="@+id/work_detail_text"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>



</RelativeLayout>